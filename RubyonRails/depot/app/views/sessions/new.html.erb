<div class="depot_form">
	<% if flash[:alert] %>
		<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<!-- This style of form allows us to associate values in the params structure directly with form fieldsâ€”no model object is required. In our case, we chose to use the params object directly in the form. -->
	<%= form_tag do %>
		<fieldset>
			<legend>Please Log In</legend>
			<!-- The first is the name to give to the field, and the second is the value with which to populate the field -->
			<div>
				<%= label_tag :name, "Name:" %>
				<%= text_field_tag :name, params[:name] %>
			</div>
			<div>
				<%= label_tag :password, "Password:" %>
				<%= password_field_tag :password, params[:password] %>
			</div>
			<div>
				<%= submit_tag "Login" %>
			</div>
		</fieldset>
	<% end %>
</div>